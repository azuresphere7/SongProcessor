<UserControl xmlns = "https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AMQSongProcessor.Models;assembly=AMQSongProcessor"
             xmlns:controls="clr-namespace:AMQSongProcessor.UI.Controls;assembly=AMQSongProcessor.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="AMQSongProcessor.UI.Views.SongView">

  <Grid RowDefinitions="1*,19*">
    <Grid ColumnDefinitions="9*,1*">
      <TextBox Watermark="Directory" Text="{Binding Directory}" KeyDown="OnKeyDown" IsEnabled="{Binding !Anime.Count}" />
      <Button Grid.Column="1" Content="{Binding DirectoryButtonText}" Command="{Binding Load}" />
    </Grid>

    <Grid Grid.Row="1" ColumnDefinitions="9*,1*">
      <Grid.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Expand All" Command="{Binding ExpandAll}" CommandParameter="{Binding ElementName=Tree}" />
          <MenuItem Header="Close All" Command="{Binding CloseAll}" CommandParameter="{Binding ElementName=Tree}" />
        </ContextMenu>
      </Grid.ContextMenu>

      <TreeView Name="Tree" Grid.Row="1" Items="{Binding Anime}">
        <TreeView.DataTemplates>
          <TreeDataTemplate DataType="models:Anime" ItemsSource="{Binding Songs}">
            <TextBlock>
              <TextBlock.ContextMenu>
                <ContextMenu>
                  <MenuItem Header="Copy ANNID" Command="{Binding ElementName=Tree, Path=DataContext.CopyANNID}" CommandParameter="{Binding Id}" />
                  <MenuItem Header="-" />
                  <MenuItem Header="Add Song" Command="{Binding ElementName=Tree, Path=DataContext.AddSong}" CommandParameter="{Binding}" />
                </ContextMenu>
              </TextBlock.ContextMenu>
              <TextBlock.Text>
                <MultiBinding StringFormat="[{0}] {1}">
                  <Binding Path="Year" />
                  <Binding Path="Name" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </TreeDataTemplate>

          <DataTemplate DataType="models:Song">
            <TextBlock Text="{Binding FullName}" VerticalAlignment="Center">
              <TextBlock.ContextMenu>
                <ContextMenu>
                  <MenuItem Header="Edit Song" Command="{Binding ElementName=Tree, Path=DataContext.EditSong}" CommandParameter="{Binding}" />
                  <MenuItem Header="Remove Song" Command="{Binding ElementName=Tree, Path=DataContext.RemoveSong}" CommandParameter="{Binding}" />
                </ContextMenu>
              </TextBlock.ContextMenu>
            </TextBlock>
          </DataTemplate>
        </TreeView.DataTemplates>
      </TreeView>

      <Grid Grid.Column="1" RowDefinitions="10*,10*,3*,10*,10*,10*,130*">
        <Button Grid.Row="0" Content="Export Fixes" Command="{Binding ExportFixes}" />
        <Button Grid.Row="1" Content="Process Songs" Command="{Binding ProcessSongs}" />
      </Grid>
    </Grid>
  </Grid>
</UserControl>