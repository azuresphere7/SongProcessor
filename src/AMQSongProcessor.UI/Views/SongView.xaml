<UserControl xmlns = "https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AMQSongProcessor.Models;assembly=AMQSongProcessor"
             xmlns:controls="clr-namespace:AMQSongProcessor.UI.Controls;assembly=AMQSongProcessor.UI"
             xmlns:converters="clr-namespace:AMQSongProcessor.UI.Converters;assembly=AMQSongProcessor.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="AMQSongProcessor.UI.Views.SongView">

  <UserControl.Styles>
    <Style Selector=":is(InputElement).disableWhenProcessing">
      <Setter Property="IsEnabled" Value="{Binding ElementName=Tree, Path=!DataContext.BusyProcessing}" />
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="1*,19*">
    <Grid ColumnDefinitions="9*,1*">
      <TextBox Watermark="Directory" Text="{Binding Directory}" KeyDown="OnKeyDown"
               IsEnabled="{Binding !Anime.Count}" />
      <Button Classes="disableWhenProcessing" Grid.Column="1" Content="{Binding DirectoryButtonText}"
              Command="{Binding Load}" />
    </Grid>

    <Grid Grid.Row="1" ColumnDefinitions="9*,1*">
      <Grid.ContextMenu>
        <ContextMenu>
          <HeaderedContentControl Header="Expand All">
            <CheckBox IsChecked="{Binding IsExpanded}" />
          </HeaderedContentControl>
          <MenuItem Header="-" />
          <HeaderedContentControl Header="Show Ignored Songs">
            <CheckBox IsChecked="{Binding ShowIgnoredSongs}" />
          </HeaderedContentControl>
        </ContextMenu>
      </Grid.ContextMenu>

      <TreeView Name="Tree" Grid.Row="1" Items="{Binding Anime}">
        <TreeView.DataTemplates>
          <TreeDataTemplate DataType="models:Anime" ItemsSource="{Binding Songs}">
            <TextBlock>
              <TextBlock.ContextMenu>
                <ContextMenu>
                  <MenuItem Header="Copy ANNID" CommandParameter="{Binding Id}"
                            Command="{Binding ElementName=Tree, Path=DataContext.CopyANNID}" />
                  <MenuItem Header="-" />
                  <MenuItem Classes="disableWhenProcessing" Header="Change Source"
                            CommandParameter="{Binding}"
                            Command="{Binding ElementName=Tree, Path=DataContext.ChangeSource}" />
                  <MenuItem Classes="disableWhenProcessing" Header="Clear Source"
                            CommandParameter="{Binding}"
                            Command="{Binding ElementName=Tree, Path=DataContext.ClearSource}" />
                  <MenuItem Header="-" />
                  <MenuItem Classes="disableWhenProcessing" Header="Add Song"
                            CommandParameter="{Binding}"
                            Command="{Binding ElementName=Tree, Path=DataContext.AddSong}" />
                </ContextMenu>
              </TextBlock.ContextMenu>
              <TextBlock.Text>
                <MultiBinding StringFormat="[{0}] {1}">
                  <Binding Path="Year" />
                  <Binding Path="Name" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </TreeDataTemplate>

          <DataTemplate DataType="models:Song">
            <TextBlock VerticalAlignment="Center">
              <TextBlock.ContextMenu>
                <ContextMenu>
                  <MenuItem Classes="disableWhenProcessing" Header="Edit Song" CommandParameter="{Binding}"
                            Command="{Binding ElementName=Tree, Path=DataContext.EditSong}" />
                  <MenuItem Classes="disableWhenProcessing" Header="Delete Song" CommandParameter="{Binding}"
                            Command="{Binding ElementName=Tree, Path=DataContext.DeleteSong}" />
                </ContextMenu>
              </TextBlock.ContextMenu>

              <TextBlock.Text>
                <MultiBinding StringFormat="[{0}] {1}">
                  <Binding Path="Type" />
                  <Binding Path="FullName" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </DataTemplate>
        </TreeView.DataTemplates>

        <TreeView.Styles>
          <Style Selector=":is(TreeViewItem)">
            <Setter Property="IsExpanded"
                    Value="{Binding ElementName=Tree, Path=DataContext.IsExpanded}" />
            <Setter Property="IsVisible">
              <MultiBinding Converter="{x:Static converters:BoolConverters.Or}">
                <Binding Path="!ShouldIgnore" />
                <Binding ElementName="Tree" Path="DataContext.ShowIgnoredSongs" />
              </MultiBinding>
            </Setter>
          </Style>

          <Style Selector="TreeViewItem /template/ ToggleButton#expander">
            <Setter Property="IsVisible">
              <MultiBinding Converter="{x:Static converters:BoolConverters.Or}">
                <Binding ElementName="Tree" Path="DataContext.ShowIgnoredSongs" />
                <Binding Path="Songs" Converter="{x:Static converters:MiscConverters.IgnoredSongs}" />
              </MultiBinding>
            </Setter>
          </Style>
        </TreeView.Styles>
      </TreeView>

      <Grid Grid.Column="1" RowDefinitions="1*,1*,1*,12*,6*">
        <Button Grid.Row="0" Content="Export Fixes" Command="{Binding ExportFixes}" />
        <Button Grid.Row="1" Content="Process Songs" Command="{Binding ProcessSongs}"
                IsVisible="{Binding !BusyProcessing}" />
        <Button Grid.Row="1" Content="Cancel" Command="{Binding CancelProcessing}"
                IsVisible="{Binding BusyProcessing}" />

        <UniformGrid Grid.Row="3" Columns="1" IsVisible="{Binding !!ProcessingData}">
          <UniformGrid.Styles>
            <Style Selector=":is(TextBlock)">
              <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
          </UniformGrid.Styles>

          <!-- Zero width spaces are used in the start of the StringFormats -->
          <HeaderedContentControl Header="Current Item">
            <TextBlock>
              <TextBlock.Text>
                <MultiBinding StringFormat="#{0} out of {1}">
                  <Binding Path="CurrentJob" />
                  <Binding Path="QueuedJobs" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </HeaderedContentControl>
          <HeaderedContentControl Header="File">
            <TextBlock Text="{Binding ProcessingData.File}" />
          </HeaderedContentControl>
          <HeaderedContentControl Header="Percentage Complete">
            <TextBlock>
              <TextBlock.Text>
                <Binding Path="ProcessingData.Percentage" StringFormat="​{0:P2}" />
              </TextBlock.Text>
            </TextBlock>
          </HeaderedContentControl>
          <HeaderedContentControl Header="Completion ETA">
            <TextBlock Text="{Binding ProcessingData.CompletionETA}" />
          </HeaderedContentControl>
          <HeaderedContentControl Header="Bitrate">
            <TextBlock>
              <TextBlock.Text>
                <Binding Path="ProcessingData.Progress.Bitrate" StringFormat="​{0}Kbp/s" />
              </TextBlock.Text>
            </TextBlock>
          </HeaderedContentControl>
          <HeaderedContentControl Header="Fps">
            <TextBlock Text="{Binding ProcessingData.Progress.Fps}" />
          </HeaderedContentControl>
          <HeaderedContentControl Header="Dropped Frames">
            <TextBlock Text="{Binding ProcessingData.Progress.DroppedFrames}" />
          </HeaderedContentControl>
          <HeaderedContentControl Header="Duplicate Frames">
            <TextBlock Text="{Binding ProcessingData.Progress.DuplicateFrames}" />
          </HeaderedContentControl>
          <HeaderedContentControl Header="Speed">
            <TextBlock>
              <TextBlock.Text>
                <Binding Path="ProcessingData.Progress.Speed" StringFormat="​{0}x" />
              </TextBlock.Text>
            </TextBlock>
          </HeaderedContentControl>
          <HeaderedContentControl Header="Total Size">
            <TextBlock>
              <TextBlock.Text>
                <Binding Path="ProcessingData.Progress.TotalSize" StringFormat="​{0:n0} bytes" />
              </TextBlock.Text>
            </TextBlock>
          </HeaderedContentControl>
        </UniformGrid>
      </Grid>
    </Grid>
  </Grid>
</UserControl>